{
    "hooks": {
        "PostToolUse": [
            {
                "matcher": "Write|Edit|MultiEdit",
                "hooks": [
                    {
                        "type": "command",
                        "command": "make fmt",
                        "timeout": 30000
                    }
                ]
            }
        ]
    },
    "permissions": {
        "allow": [
            "Bash(make:*)",
            "mcp__serena"
        ]
    }
}