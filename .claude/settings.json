{
    "hooks": {
        "PostToolUse": [
            {
                "matcher": "Write|Edit|MultiEdit",
                "hooks": [
                    {
                        "type": "command",
                        "command": "make fmt",
                        "timeout": 30000
                    }
                ]
            }
        ]
    },
    "permissions": {
        "allow": [
            "Bash(cat:*)",
            "Bash(cp:*)",
            "Bash(done)",
            "Bash(echo:*)",
            "Bash(for:*)",
            "Bash(gh issue create:*)",
            "Bash(gh issue list:*)",
            "Bash(gh issue view:*)",
            "Bash(gh pr create:*)",
            "Bash(gh pr view:*)",
            "Bash(git add:*)",
            "Bash(git branch:*)",
            "Bash(git commit:*)",
            "Bash(git diff:*)",
            "Bash(git log:*)",
            "Bash(git push:*)",
            "Bash(git status:*)",
            "Bash(go mod tidy:*)",
            "Bash(go mod verify:*)",
            "Bash(go test:*)",
            "Bash(go tool:*)",
            "Bash(grep:*)",
            "Bash(ls:*)",
            "Bash(make:*)",
            "Bash(mkdir:*)",
            "Bash(mv:*)",
            "Bash(./.claude/skills/get-pr-review-comments/get-pr-review-comments.sh:*)",
            "Bash(./.claude/skills/get-pr-review-thread-details/get-pr-review-thread-details.sh:*)",
            "Bash(./.claude/skills/reply-to-review-thread/reply-to-review-thread.sh:*)",
            "Bash(./.claude/skills/resolve-pr-thread/resolve-review-thread.sh:*)",
            "Bash(tail:*)",
            "Bash(test:*)",
            "Bash(touch:*)",
            "Bash(tree:*)",
            "Bash(while:*)",
            "SlashCommand(/plan-issue:*)",
            "SlashCommand(/plan-pr:*)",
            "SlashCommand(/review:*)",
            "SlashCommand(/run)",
            "WebSearch",
            "mcp__serena"
        ],
        "deny": [
            "Bash(git add --all)",
            "Bash(git add .)",
            "Bash(git push --force:*)",
            "Bash(git push -f:*)",
            "Bash(git rebase:*)",
            "Bash(git reset:*)",
            "Bash(rm -rf:*)",
            "Bash(scripts/create-version-tag.sh:*)",
            "Bash(sudo:*)",
            "Read(.env)",
            "Write(.env)"
        ]
    },
    "enableAllProjectMcpServers": true
}
