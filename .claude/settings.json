{
    "hooks": {
        "PostToolUse": [
            {
                "matcher": "Write|Edit|MultiEdit",
                "hooks": [
                    {
                        "type": "command",
                        "command": "make fmt",
                        "timeout": 30000
                    }
                ]
            }
        ]
    },
    "permissions": {
        "allow": [
            "Bash(cat:*)",
            "Bash(cp:*)",
            "Bash(echo:*)",
            "Bash(gh api:*)",
            "Bash(gh issue create:*)",
            "Bash(gh issue view:*)",
            "Bash(gh pr create:*)",
            "Bash(gh pr view:*)",
            "Bash(git add:*)",
            "Bash(git branch:*)",
            "Bash(git checkout:*)",
            "Bash(git commit:*)",
            "Bash(git diff:*)",
            "Bash(git log:*)",
            "Bash(git push:*)",
            "Bash(git status:*)",
            "Bash(go build:*)",
            "Bash(go mod tidy:*)",
            "Bash(go mod verify:*)",
            "Bash(go run:*)",
            "Bash(go test:*)",
            "Bash(go tool cover:*)",
            "Bash(grep:*)",
            "Bash(ls:*)",
            "Bash(make:*)",
            "Bash(mkdir:*)",
            "Bash(mv:*)",
            "Bash(test:*)",
            "Bash(touch:*)",
            "Bash(tree:*)",
            "WebFetch(domain:pkg.go.dev)",
            "WebSearch",
            "mcp__serena"
        ],
        "deny": [
            "Bash(git commit --amend:*)",
            "Bash(git push --force:*)",
            "Bash(git push -f:*)",
            "Bash(git rebase:*)",
            "Bash(git reset:*)",
            "Bash(rm -fr:*)",
            "Bash(rm -rf:*)",
            "Bash(sudo:*)",
            "Read(.env:*)",
            "Read(.env*:*)",
            "Read(*credentials*:*)",
            "Read(*secret*:*)",
            "Read(*.key:*)",
            "Read(*.pem:*)",
            "Write(.env:*)",
            "Write(.env*:*)",
            "Write(*credentials*:*)",
            "Write(*secret*:*)",
            "Write(*.key:*)",
            "Write(*.pem:*)"
        ]
    },
    "enabledMcpjsonServers": [
        "serena"
    ]
}
